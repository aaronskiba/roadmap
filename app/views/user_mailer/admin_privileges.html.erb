<p>
  <%= _('Hello %{username}') %{ username: @username } %>
</p>
<% if @user.perms.size > 0 %>
  <p>
    <% if @revoked_granted_or_updated == _('granted') %>
      <%= _('You have been granted administrator privileges in %{tool_name}:') %{ tool_name: tool_name } %>
    <% else %>
      <%= _('Your administrator privileges in %{tool_name} have been updated to the following:') %{ tool_name: tool_name } %>
    <% end %>
  </p>
  <p>
    <%= sanitize(@ul_list) %>
  </p>
<% else %>
  <p>
    <%= _('You have been revoked administrator privileges in %{tool_name}.') %{ tool_name: tool_name } %>
  </p>
<% end %>
<p>
  <%= sanitize _('More information about administering the %{tool_name} for users at your organisation is available at the %{help_url}.') % {
    tool_name: tool_name,
    help_url: link_to('help for administrators page', help_url) }
  %>
</p>
<%= render partial: 'email_signature' %>
